<h1>写真とその時思ったことを投稿してみよう！</h1>

<% if @picture.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <h2><%= pluralize(@picture.errors.count, "個のエラーがあるため、保存できません。") %></h2>
    <ul>
      <% @picture.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div>
  <%= form_with(model: @picture, local: true) do |form| %>
    <table>
      <tr>
        <th>
          <%= form.label :content %>
        </th>
        <td>
          <%= form.text_field :content %>
        </td>
      </tr>
      <tr>
        <th>
          <%= form.label :image %>
        </th>
        <td>
          <%= form.file_field :image %>
        </td>
      </tr>
      <tr>
        <th>
          <%= form.submit %>
        </th>
      </tr>
    </table>
    <%= link_to "一覧に戻る", pictures_path %>
  <% end %>
</div>